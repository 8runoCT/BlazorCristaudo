@page "/squareroot"

<h3>Square Root Calculator</h3>

<p>Enter a number:</p>
<input type="number" @bind="inputNumber" min="0" />

<button @onclick="CalculateSquareRoot">Calculate Square Root</button>

@if (squareRootResult.HasValue)
{
    <p>The square root of @inputNumber is: @squareRootResult.Value</p>
}

@code {
    private double inputNumber;  // User input number
    private double? squareRootResult;  // Result of the square root calculation

    private void CalculateSquareRoot()
    {
        if (inputNumber >= 0)
        {
            squareRootResult = Math.Sqrt(inputNumber);  // Calculate the square root
        }
        else
        {
            squareRootResult = null;  // Handle negative numbers
        }
    }
}
